:scss
  .partners-section {
    margin-bottom: 30px;
    .container {
      padding: 0;
      .partners-block {
        padding: 0;
        .container {
          padding: 0;
        }
      }
      .partners-title-block .partners-title > hr {
        width: 31%;
      }
    }
  }
  .carousel-wrap {
    /*margin: 0 20px;*/
    padding: 0 6%;
    width: 100%;
    position: relative;
    .owl-carousel .owl-stage-outer {
      /*margin: 0 2%;*/
      /*padding: 0 15px;*/
    }
  }

  .owl-carousel .item {
    position: relative;
    /* fix blank or flashing items on carousel */
    z-index: 100;
    /* fix blank or flashing items on carousel */
    -webkit-backface-visibility: hidden;
    /* fix blank or flashing items on carousel */
    a {
      &:hover, &:focus {
        text-decoration: none;
        color: #000;
      }
      .europe {
        padding: 0 50px;
      }
      &:hover > img, &:focus > img {
        -webkit-filter: sepia(1);
        filter: sepia(1);
        transition: .4s;
      }
    }
  }

  .owl-nav {
    > div {
      margin-top: -26px;
      position: absolute;
      top: 50%;
      color: #cdcbcd;
    }
    i {
      font-size: 45px;
      position: relative;
      -webkit-transform: rotate(-45deg);
      -moz-transform: rotate(-45deg);
      -ms-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
      transform: rotate(45deg);
      color: black;
    }
    .owl-prev i {
      top: -7px;
      left: 11px;
    }
    .owl-next i {
      top: -2px;
      left: 15px;
    }
    .owl-prev {
      left: -63px;
      border: 2px solid black;
      width: 42px;
      height: 42px;
      top: 80px;
      background: yellow;
      border-radius: 3px;
      -webkit-transform: rotate(-45deg);
      -moz-transform: rotate(-45deg);
      -ms-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
      transform: rotate(-45deg);
    }
    .owl-next {
      right: -63px;
      border: 2px solid black;
      width: 42px;
      height: 42px;
      top: 80px;
      background: yellow;
      border-radius: 3px;
      -webkit-transform: rotate(-45deg);
      -moz-transform: rotate(-45deg);
      -ms-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
      transform: rotate(-45deg);
    }
  }

  /* ====== Media ===== */
  @media (min-width: 992px) and (max-width: 1199px) {
    .owl-nav {
      .owl-prev {
        left: -51px;
      }
      .owl-next {
        right: -51px;
      }
    }
  }
  @media (min-width: 768px) and (max-width: 991px) {
    .owl-nav {
      .owl-next,
      .owl-prev {
        width: 32px;
        height: 32px;
        top: 50px;
        i {
          font-size: 32px;
        }
      }
      .owl-prev {
        left: -39px;
        i {
          left: 7px;
          top: -5px;
        }
      }
      .owl-next {
        right: -39px;
        i {
          left: 11px;
          top: -1px;
        }
      }
    }
  }
  @media (max-width: 767px) {
    .partners-section {
      .container {
        .partners-title-block {
          padding-top: 0;
          .partners-title {
            padding: 0;
            p {
              padding: 0;
            }
          }
        }
      }
    }
    .owl-nav {
      .owl-next,
      .owl-prev {
        width: 30px;
        height: 30px;
        top: 50px;
        i {
          font-size: 30px;
        }
      }
      .owl-prev {
        left: -35px;
        top: 150px;
        margin: auto 0;
        i {
          top: -5px;
          left: 7px;
        }
      }
      .owl-next {
        right: -35px;
        top: 150px;
        margin: auto 0;
        i {
          top: -1px;
          left: 12px;
        }
      }
    }
  }

