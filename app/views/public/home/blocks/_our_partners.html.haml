:scss
  .partners-section {
    margin-bottom: 30px;
    .container {
      padding: 0;
      .partners-title-block {
        .partners-title {
          padding: 0 140px;
          text-align: center;
          p {
            margin: 0;
            text-transform: uppercase;
            font-family: 'Lato', sans-serif;
            font-size: 32px;
            color: black;
            &:hover,
            &:focus {
              text-decoration: none;
            }
          }
           > hr {
            width: 28%;
            //width: 85%;
            border: 1px solid #ffd304;
            margin: 15px auto;
           }
        }
      }
      .partners-block {
        padding: 0;
        .container {
          padding: 0;
        }
        .carousel-wrap {
          padding: 0 6%;
          width: 100%;
          position: relative;
          .owl-carousel {
            .item {
              position: relative;
              /* fix blank or flashing items on carousel */
              z-index: 100;
              /* fix blank or flashing items on carousel */
              -webkit-backface-visibility: hidden;
              /* fix blank or flashing items on carousel */
              a {
                &:hover, &:focus {
                  text-decoration: none;
                  color: #000;
                }
                img{
                  width: auto;
                  max-height: 100px;
                  margin: auto;
                }
                &:hover > img, &:focus > img {
                  -webkit-filter: sepia(1);
                  filter: sepia(1);
                  transition: .4s;
                }
              }
            }
            .owl-stage{
              margin: 0 auto;
            }
            .owl-nav {
              > div {
                margin-top: -60px;
                position: absolute;
                i {
                  font-size: 45px;
                  position: relative;
                  color: black;
                  -webkit-transition-duration: .2s;
                  -o-transition-duration: .2s;
                  -moz-transition-duration: .2s;
                  transition-duration: .2s;
                }
                &:hover,
                &:focus {
                  i {
                    color: #ffd304;
                  }
                }
              }
              .owl-prev {
                left: -63px;
                i {
                  top: -7px;
                  left: 11px;
                }
              }
              .owl-next {
                right: -63px;
                i {
                  top: -2px;
                  left: 15px;
                }
              }
              .owl-prev,
              .owl-next {
                width: 42px;
                height: 42px;
                top: 80px;
                border-radius: 3px;
              }
            }
          }
        }
      }
    }
  }

  /* ====== Media ===== */
  @media (min-width: 992px) and (max-width: 1199px) {
    .owl-nav {
      .owl-prev {
        left: -51px;
      }
      .owl-next {
        right: -51px;
      }
    }
  }
  @media (min-width: 768px) and (max-width: 991px) {
    .owl-nav {
      display: none;
      .owl-next,
      .owl-prev {
        width: 32px;
        height: 32px;
        top: 50px;
        i {
          font-size: 32px;
        }
      }
      .owl-prev {
        left: -39px;
        i {
          left: 7px;
          top: -5px;
        }
      }
      .owl-next {
        right: -39px;
        i {
          left: 11px;
          top: -1px;
        }
      }
    }
  }
  @media (min-width: 450px) and (max-width: 767px) {
    .partners-section {
      .container {
        .partners-title-block {
          padding-top: 0;
          .partners-title {
            padding: 0;
            p {
              padding: 0;
            }
          }
        }
        .partners-block {
          .carousel-wrap {
            .owl-carousel {
              .owl-nav {
                display: none;
                .owl-next,
                .owl-prev {
                  width: 30px;
                  height: 30px;
                  top: 50px;
                  i {
                    font-size: 30px;
                  }
                }
                .owl-prev {
                  left: -35px;
                  top: 150px;
                  margin: auto 0;
                  i {
                    top: -5px;
                    left: 7px;
                  }
                }
                .owl-next {
                  right: -35px;
                  top: 150px;
                  margin: auto 0;
                  i {
                    top: -1px;
                    left: 12px;
                  }
                }
              }
            }
          }
        }
      }
    }

  }
  @media (min-width: 321px) and (max-width: 449px) {
    .partners-section {
      .container {
        .partners-title-block {
          padding-top: 0;
