      .container
        .carousel-wrap
          .owl-carousel
            - @partners.each do |partners_logo|
              .item
                =link_to '#' do
                  =image_tag( partners_logo.logo, class: 'img-responsive')

:javascript
  $(document).ready(function() {
      // ***** Carousel ***** //

    // true or false for 'loop'
    var owl = $('.owl-carousel');
    owlSlides = owl.children('.item');
    owlLoop = owlSlides.length >= 5;

    $('.owl-carousel').owlCarousel({
        items: 3,
        lazyLoad: true,
        loop: owlLoop,
        margin: 50,
        nav: true,
        navText: [
            "<i class='fa fa-angle-left'></i>",
            "<i class='fa fa-angle-right'></i>"
        ],
        autoplay: true,
        autoplayHoverPause: true,
        responsive: {
          0: {
            items: 1
          },
          768: {
            items: 3
          },
          1000: {
            items: 5
          }
        }
    });
  });