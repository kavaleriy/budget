                  }
                }
                .owl-prev {
                  left: -35px;
                  top: 150px;
                  margin: auto 0;
                  i {
                    top: -5px;
                    left: 7px;
                  }
                }
                .owl-next {
                  right: -35px;
                  top: 150px;
                  margin: auto 0;
                  i {
                    top: -1px;
                    left: 12px;
                  }
                }
              }
            }
          }
        }
      }
    }
  }

