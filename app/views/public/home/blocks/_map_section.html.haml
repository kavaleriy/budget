:scss
  .map-section, .news-section {
    width: 100%;
  }

  .map-section .container .map-title-block, .news-section .container .news-title-block {
    padding: 40px 0;
  }

  .map-section .container .map-title-block .map-title,
  .news-section .container .news-title-block .news-title,
  .partners-section .container .partners-title-block .partners-title {
    padding: 0 140px;
    text-align: center;
  }

  .map-section .container .map-title-block .map-title > p,
  .news-section .container .news-title-block .news-title > a.title-link,
  .partners-section .container .partners-title-block .partners-title > p {
    margin: 0;
    text-transform: uppercase;
    font-family: 'Lato', sans-serif;
    font-size: 32px;
    color: black;
    &:hover,
    &:focus {
      text-decoration: none;
    }
  }

  .map-section .container .map-title-block .map-title > hr,
  .news-section .container .news-title-block .news-title > hr,
  .partners-section .container .partners-title-block .partners-title > hr {
    width: 85%;
    border: 1px solid #ffd304;
    margin: 15px auto;
  }

  .map-section .container .map-block {
    //padding: 0 120px;
    padding: 0;
    iframe.map {
      width: 100%;
      height: 75vh;
      max-width: 100%;
    }
  }
  @media (min-width: 768px) and (max-width: 1199px) {
    .map-section {
      .container {
        .map-title-block {
          //padding-top: 0;
          .map-title {
            padding: 0;
            p {
              padding: 0;
            }
          }
        }
        .map-block {
          padding: 0;
        }
      }
    }
  }
  @media (max-width: 767px) {
    .map-section {
      .container {
        .map-title-block {
          padding-top: 0;
          .map-title {
            padding: 0;
            p {
              padding: 0;
            }
          }
        }
        .map-block {
          padding: 0;
        }
      }
    }
  }
.map-section
