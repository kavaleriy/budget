:css
  .cl-block-item{
    width: 100%;
    border-top: 1px solid #e2242d;
    padding-top: 10px;
    margin-bottom: 20px;
    height: 180px;
    overflow: hidden;
    position: relative;
  }
  .cl-block-item:after{
    /*background: #fff ;*/
    content: ' ';
    position: absolute;
    top: 60px;
    bottom: 0;
    left: 0;
    right: 0;
    -webkit-box-shadow: inset 0px -14px 27px 0px rgba(255, 255, 255, 1);
    -moz-box-shadow:    inset 0px -14px 27px 0px rgba(255, 255, 255, 1);
    box-shadow:         inset 0px -14px 27px 0px rgba(255, 255, 255, 1);
  }
  .cl-block-date{
    width: 46px;
    height: 48px;
    /*background: url(/assets/cl-date-item.png) top left no-repeat;*/
    /*background: url('/assets/news.jpg');*/
    overflow: hidden;
    float: left;
    margin-right: 10px;
  }
  .cl-block-date img{
    height: 100%;
  }
