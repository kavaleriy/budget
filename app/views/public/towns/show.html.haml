:scss
  // init colors
  $yellow: #ffd304;
  $white: #ffffff;
  $dark-blue: #0c2231;
  body > .bootstrap_flash {
    margin: 0;
  }
  .wrapper {
    display: flex;
    margin-top: 73px;
    .town-search{
      z-index: 6;
      position: fixed;
      margin: 0 10px;
      border: 1px solid $yellow;
      display: inline-flex;
      .select2-container {
        width: 0;
        height: 30px;
        transition: .3s;
        .select2-choice {
          width: 0;
          height: 30px;
          border-radius: 0;
          padding: 0;
          border: 0;
          #select2-chosen-1 {
            padding-top: 0;
          }
          .select2-arrow{
            display: none;
          }
        }
      }
      .search-button {
        cursor: pointer;
        padding-left: 1px;
        width: 30px;
        height: 30px;
        background-color: $dark-blue;
        i {
          font-size: 21px;
          color: $white;
          bottom: 0;
          padding: 4px 5px;
        }
        i.mobile-search {
          color: $yellow;
        }
      }
    }
    .full-search {
      .select2-container {
        width: 85%;
        transition: 1s;
        .select2-choice {
          width: 168px;
          border: 1px;
          padding-left: 15px;
          span {
            margin: 2px 0 0 0;
          }
        }
      }
    }
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 220px;
      height: 100%;
      z-index: 1;
      overflow: hidden;
      background: transparent;
      padding-top: 73px;
      .blason-block {
        display: none;
        margin-top: 50px;
        padding: 5% 30%;
      }
      .town-title {
        display: none;
        color: $white;
        text-align: center;
        padding: 10px;
        font-weight: 700;
        font-family: 'Lato', sans-serif;
        font-size: 1.6rem;
        line-height: 1.25;
      }
      .sidebar-nav {
        padding: 40px 0 0 0;
        li {
          a {
            position: relative;
            display: block;
            font-family: 'Lato', sans-serif;
            font-size: 13px;
            font-weight: 400;
            padding: 15px;
            color: #eee;
            &:before {
              font: 14px fontawesome;
              position: absolute;
              top: 14px;
              left: 20px;
            }
            &:hover,
            &:focus {
              background: #807023;
              text-decoration: none;
            }
            svg {
              position: relative;
              margin: -17px -12px;
              width: 45px;
              height: 45px;
              fill: $white;
            }
            p {
              padding-left: 1.7rem;
              margin: 0;
              display: inline-block;
            }
          }
        }
        .active {
          background: $yellow;
          a{
            color: $dark-blue;
            svg {
              fill: $dark-blue;
            }
          }
        }
        .button {
          float: left;
          padding: 0 15px;
          transform: rotate(180deg);
          transition: transform 1s;
          cursor: pointer;
          &:before {
            content: '\f100';
            font: 40px fontawesome;
            color: $white;
          }
          &:hover,
          &:focus {
            text-decoration: none;
          }
        }
      }
    }
    .is-full {
      .blason-block,
      .town-title {
        display: block;
      }

      .sidebar-nav {
        padding: 0;
        .button {
          float: right;
          padding: 0 10px;
          transform: rotate(0deg);
          transition: transform 1s;
          &:before {
            content: '\f100';
          }
        }
      }
    }
    .content {
      height: auto;
      min-height: calc(100vh - 193px);
      margin-left: 50px;
      margin-bottom: 120px;
      padding: 30px;
      background: $white;
      z-index: 4;
      transform: translate3d(0,0,0);
      transition: transform .5s;
      width: calc(100% - 50px);
      .content-wrapper {
        display: block;
        height: auto;
        .tab-content {
          #description {
            .infobox {
              width: 100% !important;
              background-color: transparent !important;
              font-size: 100% !important;
              table-layout: fixed;
              tr {
                background-color: transparent !important;
                td {
                  background-color: transparent !important;
                  overflow:hidden;
                  word-wrap:break-word;
                  table {
                    background-color: transparent !important;
                  }
                }
              }
            }
          }
        }
      }
    }
    .is-open {
      margin-left: 0;
      transform: translate3d(220px,0,0);
      width: calc(100% - 220px);
    }
    .embedded-block {
      padding: 0;
      position: absolute;
      bottom: 0;
      right: 0;
      #embedded-profile {
        position: absolute;
        background-color: $dark-blue;
        bottom: 30px;
        right: 30px;
        float: right;
        i {
          color: $white;
          font-size: 1.6rem;
          font-weight: bold;
        }
      }
      [data-tooltip] {
        position: relative;
        z-index: 2;
        cursor: pointer;
        &:before,
        &:after {
          visibility: hidden;
          opacity: 0;
          pointer-events: none;
        }
        &:before {
          position: absolute;
          bottom: 150%;
          left: 50%;
          margin-bottom: -48px;
          margin-left: -220px;
          padding: 7px;
          width: 190px;
          -webkit-border-radius: 3px;
          -moz-border-radius: 3px;
          border-radius: 3px;
          background-color: #000;
          background-color: hsla(0, 0%, 20%, 0.9);
          color: #fff;
          content: attr(data-tooltip);
          text-align: center;
          font-size: 14px;
          line-height: 1.2;
        }
        &:after {
          position: absolute;
          bottom: 30%;
          left: 50%;
          margin-left: -30px;
          width: 0;
          border-top: 5px solid transparent;
          border-bottom: 5px solid transparent;
          border-left: 5px solid hsla(0, 0%, 20%, 0.9);
          border-left: 5px solid #000;
          content: " ";
          font-size: 0;
          line-height: 0;
        }
        &:hover {
          &:before, &:after {
            visibility: visible;
            opacity: 1;
          }
        }
      }
    }
  }

  @media (min-width: 768px ) and (max-width: 991px) {
    body {
      .blocks {
        .wrapper {
          .content {
            //margin-bottom: 193px;
            .content-wrapper{
              .tab-content{
                .modules{
                  .modules-wrapper{
                    .module{
                      padding: 0;
                      width: calc(50% - 1.5rem);
                      margin: 0 1.5rem 3rem 0;
                      &:nth-child(even) {
                        margin-right: 0;
                        margin-left: 1.5rem;
                      }
                      a {
                        > div{
                          .img{
                            width: 100%;
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  @media (max-width: 767px) {
    body {
      .blocks {
        .wrapper {
          .content {
            //margin-bottom: 193px;
            .content-wrapper{
              .tab-content{
