      }
    }
    else {
      // if desktop && sidebar true
        toggleSidebar();
        toggleSearch();
    }

  }

  function initClipboard(selector, tooltipPos, delay) {
    // init tooltip
    $(selector).tooltip({
      trigger: 'click',
      placement: tooltipPos
    });

    function setTooltip(btn, message) {
      $(btn).tooltip('hide')
        .attr('data-original-title', message)
        .tooltip('show');
    }

    function hideTooltip(btn) {
      setTimeout(function() {
        $(btn).tooltip('hide');
      }, delay);
    }

    // init clipboard
    var clipboard = new Clipboard(selector);

    clipboard.on('success', function(e) {
      setTooltip(e.trigger, "#{t('.copied')}");
      hideTooltip(e.trigger);
    });

    clipboard.on('error', function(e) {
      setTooltip(e.trigger, "#{t('.failed')}");
      hideTooltip(e.trigger);
    });
  }

