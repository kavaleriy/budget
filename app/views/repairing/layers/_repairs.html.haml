:scss

  .container-fluid.modal-open {
    padding-right: 30px;
  }

  table{
    border-spacing: 1px;
    border-collapse: separate;
    font-size: 12px;
    tr:nth-child(even) {background: #DDD}
    tr:nth-child(odd) {background: #FFF}
    td{
      border: 0px;
      border-right: 1px #FFF;
    }
    td.not-valid{
      background: #FFB59D;
    }
    td.coordinates{
      overflow: hidden;
    }
    .popover-content {
      padding: 0;
    }
  }
  
  .table{
    .headers{
      padding: 4px 4px 2px;
      margin-bottom: 5px;
      font-weight: bold;
      background: #428bca;
      //background: #f0f0f0;
      //border-bottom: solid 2px grey;
      .row{
        .header{
          padding: 0 2px;
          margin-bottom: 2px;
          background: #fff;
        }
      }
    }
    .data{
      >.row{
        padding: 4px 0 2px;
        &:nth-child(even){
          background: #F5F5F5;
        }
        &:nth-child(odd){
          background: #D8D8D8;
        }
        .actions{
          margin-top: 0;
          text-align: right;
        }
      }
      .row{
        .odd{
          background: #D8F0E3;
        }
        .even{
          background: #f0f0f0;
        }
        .odd, .even{
          background: #fff;
          min-height: 15px;
          padding: 1px;
          margin-bottom: 2px;
        }
        .not-valid{
          background: #FFB59D;
        }
      }
    }
  }

