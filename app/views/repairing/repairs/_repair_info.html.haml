:scss
  $border-color: #0c2231;
  #more-info-modal {
    .modal-dialog {
      margin: 15px;
      .modal-content {
        width: 95vw;
        //height: 93vh;
        cursor: auto;
        border-radius: 0;
        border: 1px solid $border-color;
        button.close{
          position: absolute;
          top: 0;
          right: 0;
          margin-top: -4px;
          padding: 0 0px 0 0;
          font-weight: normal;
          color: white;
          text-shadow: none;
          opacity: 1;
        }
        .fond-for-close{
          width: 14px;
          height: 14px;
          position: absolute;
          top: 0;
          right: 0;
          background: $border-color;
        }
        .modal-header {
          padding: 10px 0;
          border-bottom: 2px solid $border-color;
          .modal-title {
            font-size: 18px;
          }
          &:hover,
          &:focus {
            color: $border-color;
          }
        }
        .modal-body {
          padding: 10px 0 0 0;
          h4.head-desc{
            text-transform: uppercase;
          }
          .row {
            margin-bottom: 3px;
            .title-key {
              font-weight: bold;
              .fa {
                margin-right: 7px;
                margin-left: -5px;
                width: 25px;
                text-align: center;
              }
            }
            &.photos{
              .img{
                display: inline-block;
                width: 50px;
                height: 50px;
              }
            }
          }
          .row:nth-of-type(4) .value {
            font-weight: bold;
          }
          h4{
            margin-top: 18px;
            font-size: 14px;
            font-weight: bold !important;
          }
          .more-data{
            & > .api{
              .api-text{
                display: none;
              }
              margin-top: 15px;
              & > a{
                display: block;
                margin-bottom: 5px;
                text-decoration: none;
                color: $border-color;
                font-size: 18px;
                &:before{
                  font-family: FontAwesome;
                  content: '\f196';
                }
                .button{
                  font-size: 25px;
                  margin-right: 10px;
                }
                .icon{
                  width: 25px;
                  text-align: center;
                }

              }
              &.active{
                .api-text{
                  display: block;
                }
                & > a{
                  &:before{
                    font-family: FontAwesome;
                    content: '\f147';
                  }
                }
              }
            }

          }
          //.e-data-frame {
          //  width: 100%;
          //  height: 70vh;
          //}
        }
      }
    }
  }
  // custom styles for spinner
  .vis-spinner{
    #spinner-container{
      background: none;
      .spinner{
        .sk-circle:before{
          background-color: #ffd304;
        }
      }
    }
  }

.fond-for-close
%button.close{'aria-label' => t('form.close'), 'data-dismiss' => 'modal', :type => 'button'}
  %span{'aria-hidden' => 'true'} &times;
.modal-header
  .modal-title
    %i.fa.fa-graduation-cap
    = @repairing_repair.subject
    -#= "Реконструкція площі Двірцевої, у т. ч. виготовлення проектно-кошторисної документації"
.modal-body
  .row
    .col-xs-4.title-key
      %i.fa.fa-map-marker
      = "#{ t('.info_adress') } :"
    .col-xs-8.value
      = @repairing_repair.address
  .row
    .col-xs-4.title-key
      %i.fa.fa-gears
      = "#{ t('.info_works') } :"
    .col-xs-8
      = @repairing_repair.work

  .row
    .col-xs-4.title-key
      %i.fa.fa-university
      = "#{ t('.info_spending_units') } :"
    .col-xs-8.value
      = @repairing_repair.spending_units
  .row
    .col-xs-4.title-key
      %i.fa.fa-user-secret
      = "#{ t('.info_performer') } :"
    .col-xs-8.value
      = @repairing_repair.obj_owner
  .row
    .col-xs-4.title-key
      %i.fa.fa-calendar
      = "#{ t('.repair_time') } :"
    .col-xs-8
      = format_date(@repairing_repair.repair_start_date)
      = '-'
      = format_date(@repairing_repair.repair_end_date)
  .row
    .col-xs-4.title-key
      %i.fa.fa-certificate
      = "#{ t('.warranty_date') } :"
    .col-xs-8.value
      -#= "5 років"
      = @repairing_repair.warranty_date
  .row
    .col-xs-4.title-key
      %i.fa.fa-money
      = "#{ t('.info_price') } :"
    .col-xs-8.value
      = @repairing_repair.amount

  - unless @repairing_repair.photos.blank?
    .row.photos
      .col-xs-4.title-key
        %i.fa.fa-image
        = link_to t('repairing.repairs.photos'), repairing_photos_slider_path(@repairing_repair.id), target: '_blank'
      .col-xs-8.value
        - @repairing_repair.photos[0..4].each do |photo|
          = link_to repairing_photos_slider_path(@repairing_repair.id), target: '_blank' do
            .img{style: "background-image:url(#{ asset_path photo.image.thumb }); "}

  %h4.head-desc
    = t('.description')
  %p
    = @repairing_repair.work
  %h4.head-desc
    = t('.more_info')
  %p
    = @repairing_repair.description
  .more-data
    .vis-spinner
      = render partial: 'layouts/spinner'
    .api
      = link_to external_api_e_data_path(@repairing_repair),
      remote: true do
        -#%i.fa.fa-plus-square-o.button
        %i.fa.fa-gears.icon
        = t('.e_data')
      #e-data.api-text
        #edata_payments
          %tbody
    .api
      = link_to external_api_prozzoro_path(@repairing_repair), remote: true do
        -#%i.fa.fa-plus-square-o.button
        %i.fa.fa-university.icon
        = t('.prozzoro')
      #prozzoro.api-text
    -#= link_to external_api_edr_path(@repairing_repair), remote: true do
    -#  %i.fa.fa-plus-square-o.button
    -#  %i.fa.fa-money.icon
    -#  = t('.court_register')
    -##court-register
    .api
      = link_to external_api_edr_path(@repairing_repair), remote: true do
        -#%i.fa.fa-plus-square-o.button
        %i.fa.fa-money.icon
        = t('.edr_data')
      #edr.api-text
    .api
      = link_to '#', id: 'acm-link', data: {erdpou: @repairing_repair.prozzoro_id.blank? ? @repairing_repair.edrpou_artist : @repairing_repair.prozzoro_id } do
        -#%i.fa.fa-plus-square-o.button
        %i.fa.fa-money.icon
        = t('.acm')
      #acm-api-text.api-text
    .api
      = link_to external_api_judicial_register_path(@repairing_repair), remote: true do
        %i.fa.fa-balance-scale.icon
        = t('.judicial_register')
      #judicial-register.api-text
        #judicial-register-table
          %tbody

  - if @repairing_repair.permit_appeal?
    = render partial: 'scenarios'

= javascript_include_tag 'spinner'

:javascript
  $(document).ready(function() {
    $('.api > a').not('#acm-link').click(function() {
      $('#spinner-container').trigger('spinner:run')
    })

    $('#acm-link').click(function() {

      var spendingEdrpou = $(this).data('erdpou');

      if(spendingEdrpou){
        // redirect to acm-ua.org
        window.open("http://acm-ua.org/poshuk.php?poshuk=:edrpou".replace(':edrpou', spendingEdrpou), '_blank');
      }else{
        // show external api no data yet partial
        $.ajax({
          url: '/external_api/no_data_yet',
          dataType: 'script',
          data: {
            selector: '#acm-api-text'
          }
        })
      }
    })
  })

  $( document ).ajaxComplete(function() {
    $('#spinner-container').trigger('spinner:stop')
  });