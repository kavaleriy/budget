:scss
  $road_color: #ffd304;
  .road-condition-select{
    .road-cond-select{
      #road-menu{
        border-color: black;
        padding-left: 41px;
        height: 40px;
        color: $road_color;
        font-weight: bold;
        background-color: black;
        border-radius: 0;
        svg{
          position: absolute;
          fill: #ffd304;
          left: 0;
          top: 5px;
          width: 40px;
          height: 30px;
        }
        .road-text{
          padding: 0 6px;
        }
      }
      .road-menu-list{
        li{
          a{
            padding-right: 0px;
            margin-right: 0px;
            img{
              height: 20px;
            }
          }
          .active{
            &:after{
              content: '\f00c';
              float: right;
              margin-right: 5px;
              font-family: FontAwesome;
            }
          }
        }
      }

    }
    .open{
      #road-menu{
        color: white;
        font-weight: bold;
        background-color: black;
        border-radius: 0;
        svg{
          fill: white;
        }
      }
      .road-menu-list{
        margin: 0;
        border-radius: 0;
        border-color: black;
      }
    }
  }


.dropdown.road-cond-select
  %button#road-menu.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true",
  "data-toggle" => "dropdown", :type => "button"}
    = inline_svg('icons/location-on-road.svg')
    %span.road-text якість доріг
    %span.caret
  %ul.dropdown-menu.road-menu-list{"aria-labelledby" => "road-menu"}
    %li
      = link_to image_tag('repairing/navizor.png'),'#navizor'
    %li
      = link_to image_tag('repairing/uaRoads.png'), '#uaRoads'