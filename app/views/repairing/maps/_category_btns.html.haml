    .pull-right#fullscreen
      %i.fa.fa-arrows-alt.fa-5{"aria-hidden" => "true"}
    .pull-right.year-select
      -#- if @town.blank?
      -#  .form-group
      -#    = text_field_tag 'map_town', ''
      .input-group
        %span.input-group-addon
          %b= t('repairing.maps.map_select.year')
        = select_tag 'year_select', options_for_select([nil] + ((Time.now.year - 4)..Time.now.year).to_a.reverse, selected: "#{@year}"), class: 'form-control'
    .pull-right.road-condition-select
      =render partial: 'repairing/maps/road_condition'
