:scss

  .container-fluid.modal-open {
    padding-right: 30px;
  }

  .table{
    .headers{
      padding: 4px 4px 2px;
      margin-bottom: 5px;
      font-weight: bold;
      background: #428bca;
      &.fixed-top{
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1;
        margin: 5px 15px;
      }
      .row{
        .header{
          padding: 0 2px;
          margin-bottom: 2px;
          background: #fff;
        }
      }
    }
    .data{
      >.row{
        padding: 4px 0 2px;
        &:nth-child(even){
          background: #F5F5F5;
        }
        &:nth-child(odd){
          background: #D8D8D8;
        }
        .actions{
          margin-top: 0;
          text-align: right;
        }
      }
      .row{
        .odd{
          background: #D8F0E3;
        }
        .even{
          background: #f0f0f0;
        }
        .odd, .even{
          background: #fff;
          min-height: 20px;
          padding: 1px;
          margin-bottom: 2px;
        }
        .not-valid{
          background: #FFB59D;
        }
      }
    }
  }

.modal.fade{id: 'edit_property', role: 'dialog', tabindex: '-1', appendTo: '#properties'}
  .modal-dialog.modal-sm{role: :document}
    .modal-content.modal-property#property

