:scss

  $margin_to_menu: 10;
  .books{
    box-shadow: 2px 2px 10px #428bca;
    margin-top: $margin_to_menu;
    margin-bottom: 10px;
    padding-top: 10px;
    .add-book{
      float: right;
    }
    .one-book{
      .img{
        img{
          margin: 10px 0;
          width: 100%;
          box-shadow: 2px 2px 10px #428bca;
        }
      }
      .information{
        .buttons{
          float:right;
          .btn{
            padding: 5px 10px;
          }
        }
      }
    }
    .one-book:nth-of-type(2n+1){
      background: #F7F7F7;
    }
  }
  @media (max-width: 449px) {
    .books{
      .one-book{
        .img{
          width: 100%;
          a{
            display: block;
            text-align: center;
            img{
              margin: 10px auto 0;
              width: auto;
              text-align: center;
            }
          }
        }
        .information{
          width: 100%;
          h3{
            font-size: 20px;
          }
          .buttons{
            text-align: center;
            float:none;
            .btn{
              padding: 5px 10px;
            }
          }
        }
      }
    }
  }

= content_for :header do
  .head.pull-left
    %h1
      = t('layouts.navbar.library')
      %small
        = t('.w_books')
.books.clearfix
  .documentation.col-xs-12
    .add-book
      - if current_user
        %h1= link_to t('.add_book'), new_library_book_path, :class => 'btn btn-success'
    %h2
      = t('layouts.navbar.library')
    = render partial: "categories"
    #results.books-list
      = render partial: "search_books", :locals => { books: @library_books }

    #books-paginator
      = paginate @library_books, :remote => true
