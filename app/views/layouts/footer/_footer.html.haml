:scss
  footer {
    width: 100%;
    position: absolute;
    background: #0c2231;
    .footer-wrapper {
      //padding: 0 10%;
      .footer-text {
        padding: 0 10px 0 0;
        margin: 15px 0 25px;
        border-left: 2px solid #ffd304;
        > p {
          margin: 0;
          padding-left: 10px;
          color: #ffffff;
          text-align: justify;
        }
      }
      .footer-logos {
        padding: 0 0 0 50px;
        margin-top: 15px;
        color: white;
        .row {
          .git {
            float: left;
            padding: 0 5px 0 0;
          }
          .rules {
            float: left;
            padding: 0 5px 0 0;
          }
        }
        .logo {
          padding: 10px 0 10px 2.5%;
        }
