:scss

  html {
    height: 100%;
  }
  body {
    display: flex;
    flex-direction: column;
    height: calc(100% - 120px);
    background-color: #0c2231;
    nav {
      flex: 0 0 auto;
    }
    .blocks {
      top: 0;
      margin-top: 0;
      height: 100%;
      flex: 0 0 auto;
      .wrapper {
        .content {
          margin-bottom: 100px;
          min-height: calc(100vh - 175px);
        }
      }
    }
    footer {
      width: calc(100% - 50px);
      flex: 0 0 auto;
      background: transparent;
      position: fixed;
      bottom: 0;
      left: 50px;
      .footer-wrapper {
        margin: 0 0 25px 0;
        .container {
          margin: 0;
          width: 100%;
          padding: 0;
          .row {
            .footer-logo {
              width: 165px;
              padding: 0;
              margin: 0;
              a {
                img {
                  height: 60px;
                  float: left;
                }
              }
            }
            .footer-text {
              margin: 0;
              padding: 7px 0;
              width: calc(100% - 360px);
              p {
                font-size: 1.3rem;
                line-height: 1.5rem;
              }
            }
            .social-btns {
              margin: 0;
              padding: 7px 0;
              width: 180px;
            }
          }
        }
      }
    }
    .is-full {
      width: calc(100% - 220px);
      left: 220px;
    }
  }

  @media (min-width: 1282px) and (max-width: 1609px) {
    body {
      .blocks {
        .wrapper {
          .content {
            margin-bottom: 110px;
            min-height: calc(100vh - 185px);
          }
        }
      }
    }
  }

  @media (min-width: 1100px) and (max-width: 1281px) {
    body {
      .blocks {
        .wrapper {
          .content {
            margin-bottom: 120px;
            min-height: calc(100vh - 205px);
          }
        }
      }
    }
  }

  @media (min-width: 1000px) and (max-width: 1099px) {
    body {
      .blocks {
        .wrapper {
          .content {
            margin-bottom: 130px;
            min-height: calc(100vh - 205px);
          }
        }
      }
    }
  }

  @media (min-width: 415px) and (max-width: 999px) {
    body {
      .blocks {
        .wrapper {
          .content {
            margin-bottom: 245px;
            min-height: calc(100vh - 305px);
          }
        }
      }
      footer {
        .footer-wrapper {
          .container {
            .row {
              margin: 0;
              .footer-logo {
                width: 100%;
                a {
                  img {
                    margin: 0 auto;
                    float: none;
                  }
                }
              }
              .footer-text {
                width: 100%;
              }
              .social-btns {
                width: 100%;
              }
            }
          }
        }
      }
    }
  }

  @media (min-width: 375px) and (max-width: 414px) {
    body {
      .blocks {
        .wrapper {
          .content {
            margin-bottom: 265px;
            min-height: calc(100vh - 335px);
          }
        }
      }
      footer {
        .footer-wrapper {
          .container {
            .row {
              margin: 0;
              .footer-logo {
                width: 100%;
                a {
                  img {
                    margin: 0 auto;
                    float: none;
                  }
                }
              }
              .footer-text {
                width: 100%;
              }
              .social-btns {
                width: 100%;
              }
            }
          }
        }
      }
    }
  }

