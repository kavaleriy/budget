:scss
  .navbar {
    margin-bottom: 0;
    border: none;
    border-radius: 0;
    background: #0c2231;
    .container {
      padding: 0;
      .navbar-header .logo-block {
        position: relative;
        width: 230px;
        height: 50px;
        margin: 8px 0;
        .logo {
          position: absolute;
          width: auto;
          height: 100%;
          padding-bottom: 8px;
          top: 0;
          left: 0;
        }
        .title {
          position: absolute;
          margin-bottom: 0;
          bottom: 0;
          right: 0;
          font-size: 14px;
          text-decoration: none;
          font-family: 'Lato', sans-serif;
          color: #ffd304;
          text-transform: uppercase;
          font-weight: 700;
          letter-spacing: -.5px;
        }
      }
      .navbar-collapse ul.navbar-nav {
        padding-top: 23px;
        float: right;
        > li {
          > a {
            background-color: transparent;
            font-family: 'Lato', sans-serif;
            font-size: 14px;
            font-weight: 400;
            text-transform: uppercase;
            color: white;
          }
          &.dropdown > a > span.caret {
            color: #ffd304;
          }
          > a {
            &:hover, &:focus {
              border-bottom: 3px solid #ffd304;
              padding-bottom: 12px;
            }
          }
          &.open > a {
            &:hover, &:focus {
              background-color: transparent;
              color: #ffd304;
              border-bottom: transparent;
              margin-bottom: 3px;
            }
          }
          &.active > a {
            box-shadow: none;
            background-image: none;
            background-repeat: no-repeat;
            background-color: transparent;
            color: #ffd304;
            border-bottom: none;
            cursor: text;
          }
        }
      }
      .block-lng {
        color: #fff;
        text-transform: uppercase;
        margin: 0;
        display: block;
        position: absolute;
        right: 5px;
        top: 5px;
        .lng-item {
          float: left;
          //background: rgba(20,80,159,0.5);
          padding: 3px 7px;
          /* margin: 35px 5px 5px 5px; */
          -webkit-border-radius: 3px;
          -moz-border-radius: 3px;
          ///* border-radius: 3px; */
          /* transition: 0.3s; */
          font-size: 11px;
          margin: 0 10px;
          img {
            width: 20px;
            height: auto;
          }
        }
        .active {
          background: #ffd304;
          opacity: .8;
        }
      }
    }
  }

  .dropdown-menu > li > a {
    &:hover, &:focus {
      color: #ffd304;
    }
  }

  #login-dp {
    min-width: 250px;
    padding: 14px 14px 0;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.8);
    .help-block {
      font-size: 12px;
    }
    .bottom {
      background-color: rgba(255, 255, 255, 0.8);
      border-top: 1px solid #ddd;
      clear: both;
      padding: 14px;
    }
    .social-buttons {
      margin: 12px 0;
      a {
        width: 49%;
      }
    }
    .form-group {
      margin-bottom: 10px;
    }
  }

  .btn-fb {
    color: #fff;
    background-color: #3b5998;
    &:hover {
      color: #fff;
      background-color: #496ebc;
    }
  }

  .btn-tw {
    color: #fff;
    background-color: #55acee;
    &:hover {
      color: #fff;
      background-color: #59b5fa;
    }
  }

  /* ===== Media ===== */
  @media (min-width: 1098px) and (max-width: 1199px) {
    nav > .container {
      width: 1100px;
    }
  }
  @media (min-width: 920px) and (max-width: 1099px) {
    nav > .container {
      width: 920px;
    }
    .navbar .container {
      .navbar-header .logo-block {
        .title {
          font-size: 1rem;
          top: 25px;
        }
        width: 140px;
      }
      .navbar-collapse ul.navbar-nav > li > a {
        font-size: 13px;
      }
    }
    .nav > li > a {
      padding: 15px 10px;
    }
  }
  @media (min-width: 820px) and (max-width: 919px) {
    nav > .container {
      width: 820px;
    }
    .navbar .container {
      .navbar-header .logo-block {
        .title {
          font-size: 1rem;
          top: 25px;
        }
        width: 140px;
      }
      .navbar-collapse ul.navbar-nav > li > a {
        font-size: 12px;
      }
    }
    .nav > li > a {
      padding: 15px 8px;
    }
  }
  @media (min-width: 768px) and (max-width: 819px) {
    nav > .container {
      width: 768px;
    }
    .navbar .container {
      .navbar-header .logo-block {
        .title {
          font-size: 1rem;
          top: 27px;
        }
        width: 130px;
      }
      .navbar-collapse ul.navbar-nav > li > a {
        font-size: 11px;
      }
    }
    .nav > li > a {
      padding: 15px 8px;
    }
  }
  @media (max-width: 767px) {
    .navbar {
      .container {
        padding: 0 20px;
      }
    }
    nav.min .container .navbar-header button.navbar-toggle {
      margin-top: 8px;
    }
    .navbar .container .navbar-header .logo-block {
      margin-left: 10px;
    }
    nav {
      &.min .container .navbar-header .logo-block {
        margin-left: 10px;
      }
      .container .navbar-header button.navbar-toggle {
        margin-top: 15px;
      }
    }
    .navbar .container .navbar-collapse {
      overflow-y: visible;
      border: none;
      -webkit-box-shadow: none;
      box-shadow: none;
      ul.navbar-nav {
        float: none;
        background: #0c2231;
        > li > a {
          &:hover, &:focus {
            border: none;
            padding-bottom: 10px;
          }
        }
      }
    }
    nav .container .navbar-collapse ul > li {
      text-align: center;
    }
  }
  @media (max-width: 768px) {
    #login-dp {
      background-color: inherit;
      color: #fff;
      .bottom {
        background-color: inherit;
        border-top: 0 none;
      }
    }
  }

