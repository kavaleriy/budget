:scss
  .title-right,
  .title-left {
    text-align: center;
  }

  @media screen and (max-width: 794px) {
    .title-left {
      float: left;
      width: 50%;
    }
    .title-right {
      float: right;
      width: 50%;
    }

    .ui-timeline {
      .tl-item {
        width: 794px;
        .tl-body {
          width: 392px;
          display: table-cell;
          .tl-entry {
              width: 310px;
              //margin: 0 77px 15px 0;
            .tl-content {
              width: 250px;
            }
          }
        }
      }
      .alt {
        float: left;
        .tl-body {
          vertical-align: top;
          .tl-entry {
            position: relative;
            padding: 0 10px 0 0;
            background-color: transparent !important;
            .tl-time {
            }
            .tl-content {
              position: relative;
              background-color: rgba(128,128,128, .05);
              .arrow {
                display: none;
              }
            }
          }
        }
      }
      .right {
        //float: left;
        .tl-body {
          .tl-entry {
            background-color: transparent !important;
            .tl-content {
              background-color: rgba(128,128,128, .05);
              .arrow {
                display: none;
              }
            }
          }
        }
      }
    }
  }


%hr

.row
  .col-xs-6.title-right
    %h3= t('.city')
  .col-xs-6.title-left
    %h3= t('.people')

%hr
.col-xs-12
  %section.ui-timeline
    - calendar.events.each do |event|
      %article.tl-item{:class => event[:holder] == 1 ? 'alt' : 'right', 'event_id' => event[:id] }
        .tl-body
          .tl-entry{ :style => 'background-color: rgba(128,128,128, .05);'}
            .tl-icon.round-icon.sm{:style => "background-color: #{event[:color]}" }
              %i.fa.fa-3{:class => event[:icon] }
            .tl-time
              = "#{event[:starts_at].strftime('%d-%m-%Y') }"
              - if event[:ends_at]
                %br
                = event[:ends_at].strftime('%d-%m-%Y')
            .tl-content
              %img.arrow{:src => event[:holder] == 1 ? '/assets/arrow.jpg' : '/assets/arrowL.jpg' }
              %p.tl-title{ :style => ("color: #{event[:color]}") }
                = event[:title]
              = event[:action]
              %hr
              .description
                = event[:description].to_s.html_safe

:javascript

  $(document).ready(function() {
    $('.ui-timeline article.tl-item').on('click', function(e) {

      e = $(e.currentTarget)

      event_id = e.attr('event_id')

      if (event_id == null)
        return

      calendar_id = "#{calendar.id}"
      $.get("/events/"+event_id, { calendar_id: calendar_id });
    })
  })

