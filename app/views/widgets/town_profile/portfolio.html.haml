:scss
  //init colors
  $black: black;
  $white: white;
  $dHaki: darkkhaki;

  .modules {
    .module {
      padding: 0 3rem 0 0;
      margin-bottom: 3rem;
      a {
        div:first-child{
          background-position: center;
          background-size: cover;
        }
        svg{
          fill: $white;
          width: 60px;
          height: 60px;
        }
        .budget {
          background: url('/../assets/new_design/money.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 78%;
                margin: 11%;
                padding-left: 5px;
                padding-top: 3px;
              }
            }
          }
        }
        .repair {
          background: url('/../assets/new_design/road.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 68%;
                margin: 16%;
              }
            }
          }
        }
        .programs {
          background: url('/../assets/new_design/invest.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 70%;
                margin: 15%;
              }
            }
          }
        }
        .indicators {
          background: url('/../assets/new_design/indicators.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 70%;
                margin: 12% 15% 18%
              }
            }
          }
        }
        .key_docs {
          background: url('/../assets/new_design/docs.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 70%;
                margin: 15%;
              }
            }
          }
        }
        .calendar {
          background: url('/../assets/new_design/calendar.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 70%;
                padding-top: 4px;
                margin: 18%;

              }
            }
          }
        }
        .budget_compare {
          background: url('/../assets/new_design/docs.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 65%;
                padding-top: 8px;
                margin: 3%;
                padding-left: 11px;
              }
            }
          }
        }
        .e_data {
          background: url('/../assets/new_design/docs.jpg');
          .icon {
            .icon-border {
              .svg {
                width: 70%;
                padding-top: 4px;
                margin: 18%;

              }
            }
          }
        }
        //.budget,
        //.repair,
        //.programs,
        //.indicators,
        //.key_docs,
        //.calendar,
        //.e_data,
        //.budget_compare {
        & {
          //border: 1px solid transparent;
          .img {
            width: calc(100% - 3rem);
            min-height: 243px;
            height: 100%;
            position: absolute;
            background: $black;
            opacity: .5;
            z-index: 1;
          }
          .icon {
            position: relative;
            z-index: 2;
            padding: 2rem 0;
            //top: 0;
            .icon-border {
              width: 88px;
              height: 88px;
              border-radius: 50%;
              border: 1px solid $white;
              margin: 0 auto;
            }
          }
          .title {
            position: relative;
            z-index: 2;
            font-family: 'Lato', sans-serif;
            font-size: 18px;
            font-weight: 600;
            text-align: center;
            color: $white;
            text-transform: uppercase;
            margin: 0;
            padding: 1rem 0;
          }
          .more {
            width: 100%;
            min-height: 75px;
            padding: 1rem 0;
            .more-btn {
            display: none;
              border: 2px solid $white;
              border-radius: 4px;
              width: 112px;
              height: 50px;
              margin: 0 auto;
              p {
                font-family: 'Lato', sans-serif;
                font-size: 18px;
                font-weight: 600;
                text-transform: uppercase;
                color: $white;
                margin: 10px 0px;
              }
            }
          }
        }
        &:hover,
        &:focus {
          text-decoration: none;
          //.budget,
          //.budget_compare,
          //.repair,
          //.programs,
          //.indicators,
          //.key_docs,
          //.e_data,
          //.calendar {
          & {
            .img {
              background: $dHaki;
            }
            .more {
              .more-btn {
                text-align: center;
                display: block;
                position: relative;
                z-index: 2;
              }
            }
          }
        }
      }
    }
  }

.modules
  =render partial: 'module_breadcrumbs', locals: { init_text: t('new_design.town_profile.visualization') }
  .modules-wrapper
    -@town_items.each do |item|
      .col-xs-12.col-sm-6.col-md-4.module
        = link_to item['url'], remote: true do
          %div{ class: item['name'] }
            .img
            .icon
              .icon-border
                .svg
                  =inline_svg(item['img_src'])
                -#=image_tag(item['img_src'], class: 'svg')
            .title
              -#TODO: fix view with long title
              =item['title']
            .more
              .more-btn
                %p
                  = t('public.towns.portfolio.detail')

:javascript
  $(document).ready(function() {
    function addBreadcrumbs(title, link){
      var breadcrumbs_list = $('.breadcrumb');
      breadcrumbs_list.find('li.active').removeClass('active');
      // create new li dom and set active class
      var active_li = $('<li></li>').addClass('active');
      // create new a dom and set html
      var a = $('<a>').html(title);

      active_li.append(a);

      breadcrumbs_list.append(active_li);
    }

    $('.module').click(function(){
      //TODO: need simple code for show/hide this btn
      $('#embedded-profile').hide();

      var breadcrumbs_title = $.trim($(this).find('.title').html());
      var breadcrumbs_link = $(this).find('a').attr('href');
      addBreadcrumbs(breadcrumbs_title, breadcrumbs_link);
    });
  })
