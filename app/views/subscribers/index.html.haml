- model_class = Subscriber
= content_for :header do
  .head.pull-left
    =t '.title'

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:email)
      %th=t '.actions'
  %tbody
    - @subscribers.each do |subscriber|
      %tr
        %td= link_to subscriber.email, subscriber_path(subscriber)
        %td
          = link_to t('form.edit'), edit_subscriber_path(subscriber), :class => 'btn btn-default btn-xs'
          = link_to t('form.destroy'), subscriber_path(subscriber), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('form.new', :default => t("helpers.links.new")), new_subscriber_path, :class => 'btn btn-primary'
