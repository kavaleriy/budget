- @modules_banners.each_with_index do |banner, i|
  .banner{'data-id' => banner.id}
    .data-actions
      .row
        .col-xs-2.info-show-banner
          -if banner.publish_on
            %i.fa.fa-eye.fa-2x{style: "color: #2CC185;"}
          -else
            %i.fa.fa-eye-slash.fa-2x{style: "color: coral"}
        .col-xs-10.banner-actions
          = link_to modules_change_order_path(banner_down: banner.id, banner_up: @modules_banners[i-1].nil? ? @modules_banners.last : @modules_banners[i-1]), method: :post, remote: true do
            %i.fa.fa-long-arrow-left.fa-2x.change-order
          = link_to modules_change_order_path(:banner_up => banner.id, :banner_down => @modules_banners[i+1].nil? ? @modules_banners.first : @modules_banners[i+1]), method: :post, remote: true do
            %i.fa.fa-long-arrow-right.fa-2x.change-order
          = link_to edit_modules_banner_path(banner), title: t('edit') do
            %i.fa.fa-pencil.fa-2x
          = link_to banner, :method => :delete, title: t('destroy'), :data => { :confirm => t('helpers.links.confirm') } do
            %i.fa.fa-trash-o.fa-2x
    .banner-img
      =image_tag get_img(banner), class: 'banner-img-center img-responsive'
    .data-actions
      %p
        = banner.title