:scss
  $button-background: #0c2231;
  $button-text: black;

    #export_classifier,
    #embedded-profile {
      margin: 5px;
      color: $button-text;
      font-weight: bold;
      font-size: 17px;
      margin: 3px 20px;
      display: inline-block;
      i {
        padding-right: 5px;
        color: $button-text;
        font-size: 1.6rem;
        font-weight: bold;
      }
    }

- unless url.blank?
  %button.btn#embedded-profile{ type: :button, data: { 'clipboard-text' => embed_full_url(url), 'tooltip' => t('public.towns.show.click') } }
    = fa_icon 'code 1x'
    = t('.get_code')
%a#export_classifier
  %i.fa.fa-sign-out{"aria-hidden" => "true"}
  |
  =t('helpers.links.export')
