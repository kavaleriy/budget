:scss
  $button-background: #0c2231;
  $button-text: white;

    #export_classifier,
    #embedded-profile {
      background-color: $button-background;
      margin: 5px;
      padding: 2px 10px;
      height: 26px;
      min-width: 150px;
      border-radius: 0;
      float: right;
      color: $button-text;
      font-weight: bold;
      i {
        padding-right: 5px;
        color: $button-text;
        font-size: 1.6rem;
        font-weight: bold;
      }
    }
    [data-tooltip] {
      position: relative;
      z-index: 2;
      cursor: pointer;
      &:before,
      &:after {
        visibility: hidden;
        opacity: 0;
        pointer-events: none;
      }
      &:before {
        position: absolute;
        bottom: 150%;
        left: 6%;
        margin-bottom: -48px;
        margin-left: -220px;
        padding: 7px;
        width: 204px;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
        background-color: hsla(0, 0%, 20%, 0.9);
        color: $button-text;
        content: attr(data-tooltip);
        text-align: center;
        font-size: 14px;
        line-height: 1.2;
      }
      &:after {
        position: absolute;
        bottom: 30%;
        left: 15%;
        margin-left: -30px;
        width: 0;
        border-top: 5px solid transparent;
        border-bottom: 5px solid transparent;
        border-left: 5px solid hsla(0, 0%, 20%, 0.9);
        content: " ";
        font-size: 0;
        line-height: 0;
      }
      &:hover {
        &:before, &:after {
          visibility: visible;
          opacity: 1;
        }
      }
    }

- unless url.blank?
  %button.btn#embedded-profile{ data: { 'clipboard-text' => embedFullUrl(url, 'http://'), 'tooltip' => t('public.towns.show.click') } }
    = fa_icon 'code 1x'
    = t('.get_code')
%a.btn#export_classifier
  =t('helpers.links.export')

-#:javascript
