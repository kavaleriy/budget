:scss
  .category-form{
    margin-bottom: 0px;
    form {
      margin: 0px;
      .form-group{
        display: inline-block;
        margin-right: 10px;
      }
      .btn.btn-upload{
        position: relative;
        top: 10px;
      }
    }
  }


%table.table.category-form
  %thead
    %th
      = t('repairing.category_edit.name')
    %th
      = t('repairing.category_edit.image')
  %tbody
    %tr
      %td
        %a.editable{href: '#', id: 'title', 'data-resource' => 'communal_property_category', 'data-type' => 'text', 'data-pk' => @category.id, 'data-url' => communal_property_category_path(@category), 'data-emptytext' => t('repairing.category_edit.need_name_category')}
          = @category.title
      %td
        = bootstrap_form_for @category, html: {class: 'form-inline'}, remote: true do |f|
          .upload_img{style: 'float:left;margin-right:10px;'}
            -if @category.img?
              =image_tag @category.img.thumb.url
            -else
              =image_tag "no_image.png"
          = f.file_field :img, label: t('repairing.category_edit.image_load'), accept: 'image/*', multiple: false
          = f.button class: 'btn btn-primary btn-upload' do
            %i.fa.fa-upload

-# This script for stylize file field
= render partial: 'layouts/file_upload_script'

:javascript

  $(document).ready(function() {
    $(".editable").editable();
  })
