= simple_form_for(@funds_manager) do |f|
  = f.error_notification

  - if current_user && current_user.admin?
    .form-group
      = render 'select_town'
  .form-inputs
    = f.input :edrpou, label: t('.edrpou_manager')

  - if defined?(edit_title) && edit_title
    .form-inputs
      = f.input :title, label: t('title')

  .form-actions
    = f.button :submit, t('save')