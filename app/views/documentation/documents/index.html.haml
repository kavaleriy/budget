:scss
  // init colors
  $lightcyan: lightcyan;
  $lightgrey: lightgrey;

  .documents_search {
    margin-top: 20px;
  }
  .reset-padding{
    padding: 5px 0;
    & div:not(.row){
      padding: 0;
    }
  }
  .table-title{
    font-weight: bold;
    border-bottom: 2px solid $lightgrey;
  }
  .table-body{
    border-bottom: 1px solid $lightgrey;
    padding: 5px 0;
    & div{
      min-height: 22px;
      word-wrap: break-word;
    }
  }
  @media (min-width: 768px) and (max-width: 991.9px) {
    .table-title,
    .table-body{
      font-size: small;
    }
  }
  @media (max-width: 767.9px) {
    .reset-padding{
      & > div > div{
        min-height: 25px;
        //border-bottom: 1px solid $lightcyan;
      }
      & .visible-xs{
        font-weight: bold;
      }
      & .visible-xs ~ .text-center{
        text-align: left;
      }
    }
  }
  @media (max-width: 400px) {
    .reset-padding{
      & .visible-xs,
      & .visible-xs ~ div{
        font-weight: normal;
        font-size: small;
      }
    }
  }

= content_for :header do
  .header.pull-left
    %h1
      =t('.documents')
      %small
        =t('.documents_search')

.col-xs-12.documents_search
  = render partial: 'search'

.documentation.row.table-title
  .col-sm-1.reset-padding.hidden-xs
    .col-sm-12
      .col-sm-12
        = t('.file')
  .col-sm-11.reset-padding.hidden-xs
    .col-sm-7
      .col-sm-3
        = sortable "category_id", t('.category')
      .col-sm-5.text-center
        = sortable "title", t('.title')

