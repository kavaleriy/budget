:scss
  /* The Modal (background) */
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
  }

  /* Modal Content */
  .modal-content {
    background-color: #fefefe;
    margin: auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
  }

  /* The Close Button */
  .close {
    color: #aaaaaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }

= simple_form_for(@municipal_enterprise_file) do |f|
  = f.error_notification

  .form-inputs
    - if current_user && current_user.region_admin?
      -# Town forms
      .form-group
        = render 'select_town'
    -# forms wich we clone
    #sections
      .section
        %fieldset
          .select-enterprises
            = render partial: 'select_enterprises'
          = f.input :file_type, label: 'Тип файлу',
                    collection: @type_files.map {|type| [ type[:title], type[:id] ] },
                    input_html: { name: 'municipal_enterprise_file[form][][file_type]' },
                    prompt: false
          = f.input :year, label: 'Рік',
                    collection: select_years(10),
                    input_html: { name: 'municipal_enterprise_file[form][][year]' },
                    prompt: false
          = f.input :file, label: 'Вибір файлу', class: 'form-control', input_html: { name: 'municipal_enterprise_file[form][][file]' }
          %p
            %a.btn.btn-danger.remove#clickMinus{ href: '#' }= t('delete_form')
    %p
      %a.btn.btn-info.addsection#clickPlus{ href: '#' } Залишилось форм( 5 )
  .form-actions
    = f.button :submit, t('save'), class: 'btn btn-success', id: 'myBtn', remote: true
    = link_to t('back'), municipal_enterprise_files_path, class: 'btn btn-info'

