:scss
  /* The Modal (background) */
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
  }

  /* Modal Content */
  .modal-content {
    background-color: #fefefe;
    margin: auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
  }

  /* The Close Button */
  .close {
    color: #aaaaaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }
  .section {
    border-right: 1px solid grey;
    padding-right: 15%;
  }
  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }
  @media screen and (max-width: 1300px) {
    .section {
      padding-right: 15%;
    }
  }
  @media screen and (max-width: 768px) {
    .section {
      border-right: none;
      padding-right: 0;
    }
  }

= simple_form_for(@municipal_enterprise_file) do |f|
  = f.error_notification

  .form-inputs
    - if current_user && current_user.region_admin?
      -# Town forms
      .form-group
        = render 'select_town'
    - (0..5).each do |i|
      .col-sm-2
        .section
          %fieldset
            .select-enterprises
              = render partial: 'select_enterprises'

            = f.input :file_type, label: 'Тип файлу',
                      collection: @type_files.map {|type| [ type[:title], type[:id] ] },
                      input_html: { id: "municipal_enterprise_file_file_type#{i}", name: 'municipal_enterprise_file[form][][file_type]' },
                      required: false,
                      include_blank: true,
                      prompt: false
            = f.input :year, label: 'Рік',
                      collection: select_years(10),
                      input_html: { id: "municipal_enterprise_file_year#{i}", name: 'municipal_enterprise_file[form][][year]' },
                      required: false,
                      include_blank: true,
                      prompt: false
            = f.input :file,
                      label: 'Вибір файлу',
                      class: 'form-control',
                      input_html: { id: "municipal_enterprise_file_file#{i}", name: 'municipal_enterprise_file[form][][file]' },
                      required: false,
                      prompt: false

