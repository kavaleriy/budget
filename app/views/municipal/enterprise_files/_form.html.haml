.row
  .col-sm-3
    #myModal.modal
      / Modal content
      .modal-content
        %span.close ×
        %h3 Час завантаження файлів залежить від їх кількості
        %p сторінка перезавантажиться автоматично!

:javascript
  const formLimit = 6;
  var sectionsCount = 1;

  var myBtn = document.getElementById('clickPlus');
  //add new section
  $('body').on('click', '.addsection', function() {

    var template = $('#sections .section:last').clone();

      //increment
    if(sectionsCount < formLimit){
      sectionsCount++;
      var count = formLimit - sectionsCount;

        //loop through each input
      var section = template.clone().find(':input').each(function(){

        myBtn.innerHTML = 'Залишилось форм( ' + count + ' )';

          //set id to store the updated section number
        var newId = this.id + sectionsCount;

          //update for label
        $(this).prev().attr('for', newId);

          //update id
        this.id = newId;
      }).end()

        //inject new section
      .appendTo('#sections');
    }
    return false;
  });
  //remove section
  $('#sections').on('click', '.remove', function() {
      //fade out section
    if(sectionsCount > 1){
      sectionsCount--;
      $(this).parent().fadeOut(300, function(){
            //remove parent element (main section)
        var count = formLimit - sectionsCount;
        myBtn.innerHTML = 'Залишилось форм( ' + count + ' )';

        $(this).parent().parent().empty();
        return false;
      });
    }
    return false;
  });

  // Get the modal
  var modal = document.getElementById('myModal');

  // Get the button that opens the modal
  var btn = document.getElementById("myBtn");

  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];

  // When the user clicks the button, open the modal
  btn.onclick = function() {
    modal.style.display = "block";
  }

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
