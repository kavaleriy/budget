:scss
  // init colors
  $active: #ffd304;
  $text: #0c2231;

  #inspections {
    table {
      thead {
        th {
          white-space: nowrap;
          min-width: 90px;
          cursor: pointer;
          opacity: .7;
          &:hover {
            opacity: 1;
          }
          span {
            &:before {
              content: '\f0ec';
              font-family: FontAwesome;
              font-size: 12px;
              -ms-transform: rotate(90deg); /* IE 9 */
              -webkit-transform: rotate(90deg); /* Chrome, Safari, Opera */
              transform: rotate(90deg);
              float: left;
              margin-right: 5px;
            }
          }
        }
        .payment_details {
          width: 50%;
        }
        .active {
          background: none;
          span {
            border-bottom: 2px solid $active;
          }
        }
      }
      tbody {
        tr {
          opacity: .7;
          &:hover {
            opacity: 1;
          }
        }
      }
    }
  }
  // hide sidebar for share
  .addthis-smartlayers-desktop {
    display: none;
  }


-if @inspections.blank?
  = render partial: 'layouts/no_data_yet', message: 'судових справ щодо суб’єкту в судовому реєстрі не знайдено'
-else
  #inspections.table-responsive
    %table.table.table-striped
      %thead
        %th{'data-column' => 'judgment_code', 'data-sort-direction' => 'desc'}
          %span
            = '#'
        %th{'data-column' => 'judgment_code', 'data-sort-direction' => 'desc'}
          %span
            = 'Документи'
        %th{'data-column' => 'judgment_code', 'data-sort-direction' => 'desc'}
          %span
            = 'Контролюючий орган'
        %th{'data-column' => 'judgment_code', 'data-sort-direction' => 'desc'}
          %span
            = 'Предмет перевірки'
        %th{'data-column' => 'judgment_code', 'data-sort-direction' => 'desc'}
          %span
            = 'Ступінь ризику'
        %th{'data-column' => 'judgment_code', 'data-sort-direction' => 'desc'}
          %span
            = 'Статус'
        %th.active{'data-column' => :date_finish, 'data-sort-direction' => 'desc'}
          %span
            = 'Дата завершення перевірки'
        %th{'data-column' => :sanction_sum, 'data-sort-direction' => 'desc'}
          %span
            = 'Накладені санкції (грн.)'

      = render partial: 'external_api/inspections/search_inspections_results'
    -#= @company_data1
    #pagination.text-center
      = paginate @inspections, remote: true, theme: 'e_data_template', params: {'sort_col' => 'trans_date', 'sort_dir' => 'asc'}

    -#.copyright_info
      %p
        *Інформація щодо фізичних осіб-підприємців недоступна у зв'язку з особливістю роботи судового реєстру.
      %p
        **
